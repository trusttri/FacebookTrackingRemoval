{
  "name": "Research Study on Facebook",
  "version": "0.0.2",
  "description": "Extension for conducting an academic research study about ads on Facebook",
  "default_locale": "en",
  "icons": { "128": "src/icon.png" },

  "author": "Jane Im, Weikun Lyu, Ruiyi Wang, Nick Cook",
  "homepage_url": "https://github.com/trusttri/augmentAdControl",

  "permissions": [
    "storage",
    "unlimitedStorage"
  ],

   "host_permissions": [
      "*://*.facebook.com/*",
      "*://*.facebookcorewwwi.onion/*",
      "https://ad-control-study.si.umich.edu/*",
      "https://umich.qualtrics.com/*"
  ],


  "options_ui": {
    "page": "src/options.html"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "browser_style": true,
    "default_icon": "src/icon.png",
    "default_popup": "src/options.html",
    "show_matches": [
      "*://*.facebook.com/*",
      "*://*.facebookcorewwwi.onion/*"
    ]
  },

  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*.facebook.com/*",
        "*://*.facebookcorewwwi.onion/*"
      ],
      "css": ["src/app.css"],
      "js": ["src/browser-polyfill.min.js", "src/common.js", "src/util.js", "src/app.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [{
    "resources": ["src/hide_rules/*",
                  "src/click_whitelist/*",
                  "src/param_cleaning/*",
                  "src/browser-polyfill.min.js"],
    "matches": ["<all_urls>"]
  }],

  "incognito": "spanning",

  "manifest_version": 3

}